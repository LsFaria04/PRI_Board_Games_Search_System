{
    "query": "fantasy game dice rolling",
    "limit": 30,
    "fields": "id, score, name, playingtime, maxplayers, categories, families, mechanics, description, averageweight",
    "params": {
        "defType": "edismax",
        "qf": "name description categories^4 families mechanics^4",
        "boost": "if(and(gte(field(maxplayers,max),7),gte(field(playingtime,max),21)),2,1)",
        "fq": "averageweight:[1 TO *]",
        "ps": 2
    }
}
